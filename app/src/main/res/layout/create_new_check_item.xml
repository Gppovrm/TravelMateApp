<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateNewCheckItemFragment">

    <EditText
        android:id="@+id/new_check_item_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:hint="Например, солнечные очки"
        android:fontFamily="@font/raleway_medium"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:singleLine="true"
        android:maxLength="30"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/save_new_check_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/peach"
        app:layout_constraintTop_toBottomOf="@+id/new_check_item_name_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>