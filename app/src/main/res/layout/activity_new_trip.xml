<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".NewTripActivity">

    <LinearLayout
        android:id="@+id/linear_new_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Как назовём?"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="например, прощай работа"
                android:singleLine="true"
                android:maxLength="16"
                android:textSize="16dp"
                android:fontFamily="@font/raleway_medium"
                android:padding="16dp"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Куда отправимся?"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/placeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="например, Сочи"
                android:singleLine="true"
                android:textSize="16dp"
                android:fontFamily="@font/raleway_medium"
                android:padding="16dp"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Когда начало?"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/dateStartEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ДД.ММ.ГГГГ"
                android:background="@drawable/rounded_edittext"
                android:singleLine="true"
                android:textSize="16dp"
                android:fontFamily="@font/raleway_medium"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="16dp"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Когда конец?"
                android:fontFamily="@font/raleway_semibold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/dateEndEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext"
                android:hint="ДД.ММ.ГГГГ"
                android:textSize="16dp"
                android:fontFamily="@font/raleway_medium"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="16dp"
                android:layout_marginVertical="15dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/peach"
        android:padding="16dp"
        android:text="Готово"
        android:textSize="16dp"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_new_trip" />

</androidx.constraintlayout.widget.ConstraintLayout>